<h1>Add a New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: %w[chinese italian japanese french belgian], prompt: "Select a category" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
